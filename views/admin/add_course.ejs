<%- include("header.ejs") %>
<div class="container p-3 col-md-6 col-sm-8 col-lg-12" >
    <h3>Add Course's</h3>

    <form action="save_course" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 mt-4">
                <label>Course Name<span class="text-danger">*</span></label>
                <input class="form-control" required type="text" name="course_name">
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Category<span class="text-danger">*</span></label>
                <select name="course_category" required class="form-control">
                    <option value="" selected disabled > Select Categoty</option>
                    <%   data.forEach((val,i)=>{  %>
                    <option value="<%= val.cat_id %>"> <%= val.cat_name %> </option>
                    <%  })    %>
                </select>
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Duration</label>
                <input class="form-control" type="text" name="course_duration">
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Price<span class="text-danger">*</span></label>
                <input class="form-control" type="number" required name="course_price">
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Image<span class="text-danger">*</span></label>
                <input class="form-control" type="file" required name="course_image">
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Sample Video</label> 
                <input class="form-control" type="file" accept="video/mp4" name="course_video">
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Mentor</label>
                <input class="form-control" type="text" name="course_mentor">
            </div>
            <div class="col-md-4 mt-4">
                <label>Course Link</label>
                <input class="form-control" type="text" name="course_link">
            </div>
            <div class="col-md-4 mt-4">
                <label>Platform<span class="text-danger">*</span></label>
                <select name="course_platform" required class="form-control">
                    <option value="" selected disabled > Select Platform</option>
                    <option value="Online Live"> Online Live </option>
                    <option value="ClassRoom Live"> ClassRoom Live </option>
                    <option value="recorded"> Recorded </option>
                </select>
            </div>
            <div class="col-md-12 mt-4">
                <textarea class="form-control" name="course_details"></textarea>
            </div>
            <div class="col-md-12 mt-4 text-end">
                <button class="btn btn-primary"> Save Course</button>
            </div>
        </div>
    </form>
</div>
<%- include("footer.ejs") %>