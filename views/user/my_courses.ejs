<%- include('header.ejs') %>
    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>My Courses</h2>
            </div>
            <div class="col-md-12">
                <table class="table table-bordered">
                    <tr>
                        <th>Course Name</th>
                        <th>Purchase Date</th>
                        <th>Amount</th>
                    </tr>
                    <% for(var i=0; i<courses_list.length; i++){ %>
                        <tr>
                            <td><%= courses_list[i].course_name %></td>
                            <td><%= courses_list[i].purchase_date %></td>
                            <td><b>&#8377;<%= courses_list[i].amount %>/-</b></td>
                        </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>

<%- include('footer.ejs') %>