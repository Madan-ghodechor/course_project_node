<%- include('header.ejs') %>

<div class="container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6 p-5">
            <img style="object-fit: cover; height: 450px;" class="w-100" src="/uploads/<%=data[0].course_image%>" alt="">
        </div>
        <div class="col-md-6">
            <h3 style="font-weight: bold;"> <%= data[0].course_name %> </h3>
            <h5>In <%= data[0].course_duration%></h5>
            <h3 style="font-weight: bold;" class="text-success"> &#8377; <%= data[0].course_price %> /- </h3>
            <h5>By <b class="text-primary"> <%= data[0].course_mentor%> </b></h5>
            <br>
            <h5 class="text-danger"> <%= data[0].course_platform%></h5>
            <br>
            <% if(!ispurchase){ %>
                <a href="/confirm_seat/<%= data[0].course_id%>">
                    <button class="btn btn-dark btn-lg float-left">Confirm Your Seat</button> 
                </a>
            <% }else{ %>
                <a>
                    <button class="btn btn-dark btn-lg float-left">Allready Purchased</button> 
                </a>
            <% } %>


            <% if(data[0].course_video!=''){ %>
            <a href="" onclick="videoOpen()" class="btn btn-primary" style="border-radius: 50%; margin-left:40px; float: left; height:50px; width: 50px; display: grid; place-items: center;"><i class="fa-solid fa-play fa-fade"></i></a>
            <%}%>
        </div>
        <div class="col-md-12 p-5">
            <h5>
                <%- data[0].course_details.replaceAll('\n',"<br>")%>
            </h5>
        </div>
    </div>
</div>

<script>
    function videoOpen()
    {
        window.open("/uploads/<%=data[0].course_video%>","height=500px,width=auto")
    }
</script>

<%- include('footer.ejs') %>