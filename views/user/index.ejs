<%- include('header.ejs') %>

<style>

      .carousel-indicators {
          width: 100%;
          margin-left: 0px;
          justify-content: end;
          padding-right: 20px;
      }
      .carousel-indicators li
      {
          background-color: rgb(142, 142, 142);
          height: 30px;
          width: 30px;
          border-radius: 50%;
          box-shadow: 0px 0px 10px  white;
      }
      .carousel-indicators .active
      {
          background-color: gold  ;
      }
      .carousel-caption
      {
        background-image: linear-gradient(-60deg,rgba(255, 0, 0, 0) 30%, rgba(0, 0, 0, 0.512) 30%);
        position: absolute;
        left: 0px;
        width: 60%;
        height: 100%;
        top: 0px;
        display: flex;
        align-items: center;
        padding-left: 40px;
      }

    
    </style>

<div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
    <% for(var i=0; i<sliderData.length; i++ ){ %>
      <li data-target="#demo" data-slide-to="<%=i%>" class="<%=(i==0)?'active':''%>"></li>
    <% } %>
    </ul>
    <div class="carousel-inner">
    <% for(var i=0; i<sliderData.length; i++ ){ %>
      <div class="carousel-item <%=(i==0)?'active':''%>">
        <img src="/uploads/<%= sliderData[i].slider_image %>" alt="Los Angeles" width="1100" height="500">
        <div class="carousel-caption">
          <div class="center-div">
            <h3> <%=sliderData[i].slider_title %> </h3>
            <p>
              <a  href="<%=sliderData[i].btn_link %>" target="blank">
                <Button class="btn btn-primary"> <%=sliderData[i].slider_button %> </Button>
              </a>
            </p>
          </div>
        </div>   
      </div>
    <% } %>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>
</div>

<div class="container">
  <div class="row w-100 justify-content-center">
    <div class="col-md-12 mt-5 mb-5">
      <h3 class="text-center">Newly Added Courses</h3>
    </div>
  <% for(var i=0; i<courses.length; i++ ){ %>
    <div class="col-md-4">
      <div class="card" style="border: none !important;">
        <div class="card-header">
          <b><%= courses[i].course_name %></b>
        </div>
        <div class="card-body m-0 p-0">
          <img style="object-fit: cover;" height="300px" width="100%" src="/uploads/<%= courses[i].course_image %>" alt="">
        </div>
        <div class="card-footer bg-dark text-white">
          <h3> &#8377; <%=courses[i].course_price%> /-
            <a href="/course_details/<%=courses[i].course_id%>"><button class="btn btn-outline-light float-right">View Details</button> </a>
          </h3>
        </div>
      </div>
    </div>
  <% } %>
  </div>
</div>



<%- include('footer.ejs') %>