<%- include('header.ejs') %>

<div class="container">
  <div class="row w-100 justify-content-center">
    <div class="col-md-12 mt-5 mb-5">
      <h3 class="">All Courses</h3>
    </div>

    <% data.forEach( (val,i)=>{%>
        <div class="col-md-3 m-3">
            <div class="card" style="border: none !important;">
              <div class="card-header">
                <b><%= val.course_name %></b>
              </div>
              <div class="card-body m-0 p-0">
                <img style="object-fit: cover;" height="300px" width="100%" src="/uploads/<%= val.course_image %>" alt="">
              </div>
              <div class="card-footer bg-dark text-white">
                <h3> &#8377; <%=val.course_price%> /-
                  <a href="/course_details/<%=val.course_id%>"><button class="btn btn-outline-light float-right">View Details</button> </a>
                </h3>
              </div>
            </div>
          </div>
    <% }) %>
  </div>
</div>



<%- include('footer.ejs') %>